<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.LoginFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="370px"
            android:layout_height="370px"
            android:layout_marginTop="96dp"
            android:src="@drawable/logo_pioner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/log_email"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginTop="96dp"
            android:autofillHints="email"
            android:ems="10"
            android:hint="Почта"
            android:textColorHint="#93ABD2"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logoImage"
            tools:ignore="HardcodedText"
            android:background="@drawable/background_input_log_reg"/>

        <EditText
            android:id="@+id/log_pass"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:autofillHints="password"
            android:ems="10"
            android:hint="Пароль"
            android:textColorHint="#93ABD2"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/log_email"
            tools:ignore="HardcodedText"
            android:background="@drawable/background_input_log_reg"/>

        <Button
            android:id="@+id/log_btn"
            android:layout_width="541px"
            android:layout_height="135px"
            android:layout_marginTop="92dp"
            android:background="@drawable/background_button_log_reg"
            android:text="Вход"
            android:textAllCaps="false"
            android:textColor="#F4F7FB"
            android:textSize="60px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/log_pass"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/log_reg"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="4dp"
            android:background="#00FFFFFF"
            android:text="Зарегистрироваться"
            android:textAllCaps="false"
            android:textColor="#93ABD2"
            android:textSize="30px"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/log_pass"
            app:layout_constraintTop_toBottomOf="@+id/log_pass"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/log_miss_pass"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="4dp"
            android:background="#00FFFFFF"
            android:text="Забыли пароль?"
            android:textAllCaps="false"
            android:textColor="#93ABD2"
            android:textSize="30px"
            app:layout_constraintEnd_toEndOf="@+id/log_pass"
            app:layout_constraintTop_toBottomOf="@+id/log_pass"
            tools:ignore="HardcodedText" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>