<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CreatingNewPassword">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/create_new_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="114dp"
            android:text="Изменение Фамилии и Имени"
            android:textColor="#6588C2"
            android:textSize="60px"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/name_field"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="140dp"
            android:autofillHints="emailAddress"
            android:background="@drawable/background_input_log_reg"
            android:ems="10"
            android:gravity="center"
            android:hint="Фамилия"
            android:textColorHint="#93ABD2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_new_name_textView"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/surname_field"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:autofillHints="emailAddress"
            android:background="@drawable/background_input_log_reg"
            android:ems="10"
            android:gravity="center"
            android:hint="Имя"
            android:textColorHint="#93ABD2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_field"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/complete_recovery_btn"
            android:layout_width="541px"
            android:layout_height="135px"
            android:layout_marginTop="128dp"
            android:background="@drawable/background_button_log_reg"
            android:text="Подтвердить"
            android:textAllCaps="false"
            android:textColor="#F4F7FB"
            android:textSize="60px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/surname_field"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>