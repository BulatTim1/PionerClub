<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AccessRecoveryFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/access_recovery_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="114dp"
            android:text="Восстановление доступа"
            android:textColor="#6588C2"
            android:textSize="60px"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/access_mail"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="189dp"
            android:autofillHints="emailAddress"
            android:inputType="textEmailAddress"
            android:background="@drawable/background_input_log_reg"
            android:ems="10"
            android:gravity="center"
            android:hint="Почта"
            android:textColorHint="#93ABD2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/access_recovery_textView"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/return_log_recovery_btn"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="8dp"
            android:background="#00FFFFFF"
            android:text="Помните пароль? Войдите"
            android:textAllCaps="false"
            android:textColor="#93ABD2"
            android:textSize="30px"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/access_mail"
            app:layout_constraintTop_toBottomOf="@+id/access_mail"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/continue_recovery_email_btn"
            android:layout_width="541px"
            android:layout_height="135px"
            android:layout_marginTop="135dp"
            android:background="@drawable/background_button_log_reg"
            android:text="Продолжить"
            android:textAllCaps="false"
            android:textColor="#F4F7FB"
            android:textSize="60px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/access_mail"
            tools:ignore="HardcodedText" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>