<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddRationFragment">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:gravity="center"
        android:text="Добавление записи"
        android:textAlignment="center"
        android:textColor="#6588C2"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/TextPersonMassRation"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="48dp"
        android:autofillHints="weight"
        android:background="@drawable/background_input_log_reg"
        android:ems="10"
        android:gravity="center"
        android:hint="кг"
        android:inputType="number"
        android:textColorHint="#93ABD2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foresight"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/TextPersonСaloriesRation"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="48dp"
        android:autofillHints="weight"
        android:background="@drawable/background_input_log_reg"
        android:ems="10"
        android:gravity="center"
        android:hint="Ккал"
        android:importantForAutofill="no"
        android:inputType="number"
        android:textColorHint="#93ABD2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextPersonHeightRation"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/TextPersonHeightRation"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="48dp"
        android:autofillHints="height"
        android:background="@drawable/background_input_log_reg"
        android:ems="10"
        android:gravity="center"
        android:hint="см"
        android:importantForAutofill="no"
        android:inputType="number"
        android:textColorHint="#93ABD2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextPersonMassRation"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/SaveRationButton"
        android:layout_width="541px"
        android:layout_height="135px"
        android:layout_marginTop="96dp"
        android:background="@drawable/background_button_log_reg"
        android:text="Добавить"
        android:textAllCaps="false"
        android:textColor="#F4F7FB"
        android:textSize="60px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextPersonСaloriesRation"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/foresight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Предосмотр данных"
        android:textColor="#D6D6D6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ваш вес"
        android:textColor="#D6D6D6"
        app:layout_constraintBottom_toTopOf="@+id/TextPersonMassRation"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ваш рост"
        android:textColor="#D6D6D6"
        app:layout_constraintBottom_toTopOf="@+id/TextPersonHeightRation"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Калорийность вашей пищи"
        android:textColor="#D6D6D6"
        app:layout_constraintBottom_toTopOf="@+id/TextPersonСaloriesRation"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        tools:ignore="HardcodedText" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="25dp" />

</androidx.constraintlayout.widget.ConstraintLayout>