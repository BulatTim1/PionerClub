<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MainPageStudentFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/squareBarView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/background_button_log_reg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/ProgressCircleBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/circle_shape"
            android:indeterminate="false"
            android:max="100"
            android:progress="10"
            android:progressDrawable="@drawable/circular_progress_bar"
            app:layout_constraintBottom_toBottomOf="@+id/squareBarView"
            app:layout_constraintEnd_toEndOf="@+id/squareBarView"
            app:layout_constraintStart_toStartOf="@+id/squareBarView"
            app:layout_constraintTop_toTopOf="@+id/squareBarView" />

        <TextView
            android:id="@+id/ProgressCircleText"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="Завершено упражнений 75%"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@+id/squareBarView"
            app:layout_constraintEnd_toEndOf="@+id/squareBarView"
            app:layout_constraintStart_toStartOf="@+id/squareBarView"
            app:layout_constraintTop_toTopOf="@+id/squareBarView"
            android:textStyle="bold"
            tools:ignore="SmallSp" />

        <Button
            android:id="@+id/continue_exercise_btn"
            style="@style/Theme.MaterialComponents.Light.NoActionBar"
            android:layout_width="158dp"
            android:layout_height="70dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/purple_button"
            android:text="Продолжить упражнения"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/squareBarView"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/diary_back_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/blue_light_btn"
            app:layout_constraintBottom_toBottomOf="@+id/diary_btn"
            app:layout_constraintEnd_toEndOf="@+id/diary_btn"
            app:layout_constraintStart_toStartOf="@+id/diary_btn"
            app:layout_constraintTop_toTopOf="@+id/diary_btn" />

        <ImageView
            android:id="@+id/image_diary"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_diary"
            app:layout_constraintBottom_toBottomOf="@+id/diary_btn"
            app:layout_constraintEnd_toEndOf="@+id/diary_btn"
            app:layout_constraintStart_toStartOf="@+id/diary_btn"
            app:layout_constraintTop_toTopOf="@+id/diary_btn" />

        <Button
            android:id="@+id/diary_btn"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginTop="4dp"
            android:background="#00FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/continue_exercise_btn"
            app:layout_constraintTop_toBottomOf="@+id/continue_exercise_btn" />

        <ImageView
            android:id="@+id/messenger_back_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/blue_light_btn"
            app:layout_constraintBottom_toBottomOf="@+id/messenger_btn"
            app:layout_constraintEnd_toEndOf="@+id/messenger_btn"
            app:layout_constraintStart_toStartOf="@+id/messenger_btn"
            app:layout_constraintTop_toTopOf="@+id/messenger_btn" />

        <ImageView
            android:id="@+id/image_messenger"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_messenger"
            app:layout_constraintBottom_toBottomOf="@+id/messenger_btn"
            app:layout_constraintEnd_toEndOf="@+id/messenger_btn"
            app:layout_constraintStart_toStartOf="@+id/messenger_btn"
            app:layout_constraintTop_toTopOf="@+id/messenger_btn" />

        <Button
            android:id="@+id/messenger_btn"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginTop="4dp"
            android:background="#00FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/continue_exercise_btn"
            app:layout_constraintTop_toBottomOf="@+id/continue_exercise_btn" />

        <TextView
            android:id="@+id/lastMessageTrainerView"
            android:layout_width="338dp"
            android:layout_height="38dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/blue_80_back"
            android:gravity="center"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="Да, можно совмещать тренеровки в приложении и тренеровки в футбольном клубе! Тол..."
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/squareBarView"
            tools:ignore="SmallSp" />

        <ImageView
            android:id="@+id/physical_data_card"
            android:layout_width="338dp"
            android:layout_height="164dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/blue_light_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lastMessageTrainerView" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:text="Основано на данных за ваши занятия"
            android:textColor="#767676"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/physical_data_card"
            app:layout_constraintTop_toTopOf="@+id/physical_data_card"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Cовет дня"
            android:textColor="#767676"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/physical_data_card"
            app:layout_constraintTop_toBottomOf="@+id/line_in_card_View"
            tools:ignore="SmallSp" />

        <ImageView
            android:id="@+id/line_in_card_View"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/line"
            app:layout_constraintEnd_toEndOf="@+id/physical_data_card"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/physical_data_card"
            app:layout_constraintTop_toTopOf="@+id/physical_data_card" />

        <LinearLayout
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="9dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/physical_data_card"
            app:layout_constraintStart_toStartOf="@+id/physical_data_card"
            app:layout_constraintTop_toTopOf="@+id/physical_data_card">

            <LinearLayout
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/textView9"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="4dp"
                    app:srcCompat="@drawable/mass" />

                <TextView
                    android:id="@+id/massMainView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="4dp"
                    android:text="80 кг"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/MassImageView"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@drawable/rise_ration" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/textView12"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/height" />

                <TextView
                    android:id="@+id/heightMainView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="4dp"
                    android:text="170 см"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/HeightImageView"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@drawable/downgrade_ration" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/textView14"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="2dp"
                    app:srcCompat="@drawable/ccal" />

                <TextView
                    android:id="@+id/ccalMainView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="4dp"
                    android:text="3000 ккал"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/CcalImageView"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@drawable/without_changes_ration" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tipDayTextView"
            android:layout_width="337dp"
            android:layout_height="70dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:text="Вы стремительно начали терять вес, не изменив свой рацион, что может привести к анемии. Повысьте питательность вашего рациона! При появлении сильной слабости - обратитесь к врачу."
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/physical_data_card"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/physical_data_card"
            app:layout_constraintTop_toBottomOf="@+id/line_in_card_View" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/physical_data_card"
            app:layout_constraintVertical_bias="0.0">

            <Button
                android:id="@+id/diary_main_btn"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/blue_light_btn"
                android:text="Дневник"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <Button
                android:id="@+id/mess_main_btn"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/blue_light_btn"
                android:text="Мессенжер"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <Button
                android:id="@+id/exerc_main_btn"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/blue_light_btn"
                android:text="Упражнения"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <Button
                android:id="@+id/setting_main_btn"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/blue_light_btn"
                android:text="Настройки"
                android:textAllCaps="false"
                android:textSize="18sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>